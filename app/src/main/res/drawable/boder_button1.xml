<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--这里是Linearlayout布局的背景颜色-->
    <solid android:color="#ffffff" />
    <!--这里是设置边框线的粗细和颜色-->
    <stroke
        android:width="0.5dp"
        android:color="#a4b1ba" />

    <padding
        android:left="2dp"
        android:right="2dp" />
    <!--角的话，里边有参数可以单独设置-->
    <corners android:radius="30dp" />

</shape>
